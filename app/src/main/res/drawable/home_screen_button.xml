<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="5dip" />
            <gradient  android:angle="-90"  android:startColor="#ff302b77" android:endColor="#ff5261c7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" />
            <solid  android:color="#ff8d8cff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="5dip" />
            <gradient  android:angle="-90"  android:startColor="#ff5261c7" android:endColor="#ff202452" />
        </shape>
    </item>
</selector>