<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.johan.uggletrasket" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/owl1"
        android:label="@string/app_name"
        android:theme="@style/NoActionBarTheme" >
        <activity
            android:name=".layout.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".layout.QuestionActivity"
            android:label="@string/app_name"
            android:noHistory="true"/>

        <activity
            android:name=".layout.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true"/>

        <activity
            android:name=".layout.AddQuestionActivity"
            android:label="@string/title_activity_add_question"
            android:noHistory="true"/>
        <activity
            android:name=".layout.QuizResultActivity"
            android:label="QuizResult"
            android:noHistory="true"/>
        <activity
            android:name=".layout.AddQuizActivity"
            android:label="AddQuiz"
            android:noHistory="true"/>
        
        <activity
            android:name=".layout.StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:noHistory="true">
        </activity>
    </application>
</manifest>
